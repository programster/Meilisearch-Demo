{
    "require": {
        "slim/slim": "^4",
        "programster/core-libs": "^1.7",
        "symfony/dotenv": "^5.1",
        "programster/abstract-view": "^1.0",
        "programster/upload-file-manager": "^1.0",
        "slim/psr7": "^1.1",
        "irap/autoloader": "1.*",
        "irap/migrations": "^2.0",
        "ramsey/uuid": "^4.1",
        "irap/mysql-objects": "^4.0",
        "meilisearch/meilisearch-php": "^1.1",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "config": {
        "platform" : {
            "php": "8.2.0",
            "ext-bcmath": "1",
            "ext-gmp": "1",
            "ext-uuid": "1",
            "ext-mbstring": "1",
            "ext-xml": "1",
            "ext-mysql": "1",
            "ext-zip": "1",
            "ext-curl": "1"
        },
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
